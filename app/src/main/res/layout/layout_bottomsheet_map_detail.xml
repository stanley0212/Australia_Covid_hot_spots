<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<!--        <ImageView-->
<!--            android:id="@+id/mapTitleImg"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="30dp"-->
<!--            android:src="@drawable/police"-->
<!--            android:layout_gravity="center"/>-->
        <TextView
            android:id="@+id/mapid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/mapUserID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/brandon_medium"
            android:padding="15dp"
            android:text="Details"/>
    <TextView
        android:id="@+id/mapTopTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/brandon_medium"
        android:padding="15dp"
        android:text="Details"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#D0D0D0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/map_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/default_banner"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/map_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:fontFamily="@font/brandon_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="5dp"
            android:background="#D0D0D0"/>

        <TextView
            android:id="@+id/map_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info"
            android:fontFamily="@font/brandon_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="5dp"
            android:background="#D0D0D0"/>

        <TextView
            android:id="@+id/map_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LatLng"
            android:fontFamily="@font/brandon_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="5dp"
            android:background="#D0D0D0"/>

        <TextView
            android:id="@+id/map_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            android:fontFamily="@font/brandon_medium"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="5dp"
            android:background="#D0D0D0"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/map_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End"
            android:fontFamily="@font/brandon_medium"
            android:visibility="gone"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="5dp"
            android:background="#D0D0D0" />

        <TextView
            android:id="@+id/map_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:fontFamily="@font/brandon_medium"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="5dp"
            android:background="#D0D0D0" />
<!--        <Button-->
<!--            android:id="@+id/deleteMarker"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="30dp"-->
<!--            android:layout_marginBottom="8dp"-->
<!--            android:padding="0dp"-->
<!--            android:text="Delete"-->
<!--            android:textColor="@android:color/black"-->
<!--            android:background="@drawable/marker_delete"/>-->

    </LinearLayout>
    </LinearLayout>


</ScrollView>